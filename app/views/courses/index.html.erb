<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_on) %></th>
      <th><%= model_class.human_attribute_name(:sections) %></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course_path(course) %></td>
        <td><%=l course.created_at.to_date %></td>
        <% course.sections.each do |section| %>
          <td><%= section.header %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Create Course', :default => t("helpers.links.create_course")),
            new_course_path,
            :class => 'btn btn-primary' %>
